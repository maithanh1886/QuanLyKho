<!--                android:orientation="horizontal">-->
<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Giá sản phẩm : "-->
<!--                    android:textColor="#636363"-->
<!--                    android:fontFamily="serif"-->
<!--                    android:textSize="16dp" />-->
<!--                <TextView-->
<!--                    android:id="@+id/tvGiaSanPhamPhieuXuat"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="20000"-->
<!--                    android:fontFamily="serif"-->
<!--                    android:textColor="#636363" />-->
<!--            </LinearLayout>-->
            <LinearLayout
                android:id="@+id/layoutSoLuongsp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số lượng sản phẩm : "
                    android:textColor="#636363"
                    android:fontFamily="serif"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/tvSoLuongSanPhamPhieuXuat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:fontFamily="serif"
                    android:textColor="#636363" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutSoLuongsp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày xuất : "
                    android:textColor="#636363"
                    android:fontFamily="serif"
                    android:textSize="16dp"
                    />
                <TextView
                    android:id="@+id/tvNgayXuatSanPhamPhieuXuat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25/12/2023"
                    android:fontFamily="serif"
                    android:textColor="#636363"
                    />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/ivXoaSPPhieuXuat"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_delete_test" />
            <ImageView
                android:id="@+id/ivSuaSPPhieuXuat"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/icon_edit_test" />
        </LinearLayout>
    </LinearLayout>




</androidx.cardview.widget.CardView>