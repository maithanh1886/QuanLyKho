<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    android:background="@color/white"
    android:padding="10dp">


    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên người nhập : "
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:fontFamily="serif"/>
                <TextView
                    android:id="@+id/tentv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Khánh"
                    android:textStyle="bold"
                    android:fontFamily="serif"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutTensp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã sản phẩm : "
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:fontFamily="serif"/>
                <TextView
                    android:id="@+id/tvTenSanPhamPhieuNhap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quần cộc"
                    android:textStyle="bold"
                    android:fontFamily="serif"/>
            </LinearLayout>
<!--            <LinearLayout-->
<!--                android:id="@+id/layoutGiaSp"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_below="@id/layoutTensp"-->
<!--                android:layout_marginTop="3dp"-->
<!--                android:orientation="horizontal">-->
<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Giá sản phẩm : "-->
<!--                    android:textColor="#636363"-->
<!--                    android:textSize="16dp" />-->
<!--                <TextView-->
<!--                    android:id="@+id/tvGiaSanPhamPhieuNhap"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="20000"-->
<!--                    android:textColor="#636363" />-->
<!--            </LinearLayout>-->
            <LinearLayout
                android:id="@+id/layoutSoLuongsp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số lượng sản phẩm : "
                    android:textColor="#636363"
                    android:textSize="16dp"
                    android:fontFamily="serif"/>
                <TextView
                    android:id="@+id/tvSoLuongSanPhamPhieuNhap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textColor="#636363"
                    android:fontFamily="serif"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutSoLuongsp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày nhập : "
                    android:textColor="#636363"
                    android:textSize="16dp"
                    android:fontFamily="serif"/>
                <TextView
                    android:id="@+id/tvNgayXuatSanPhamPhieuNhap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25/12/2023"
                    android:textColor="#636363"
                    android:fontFamily="serif"/>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/ivXoaSPPhieuNhap"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_delete_test" />
            <ImageView
                android:id="@+id/ivSuaSPPhieuNhap"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/icon_edit_test" />
        </LinearLayout>


    </LinearLayout>






</androidx.cardview.widget.CardView>