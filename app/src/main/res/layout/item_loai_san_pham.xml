<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:padding="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên loại nè : "
            android:textSize="17dp"
            android:textStyle="bold"
            android:fontFamily="serif"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/tvTenLoaiSanPham"

            android:text="Quần cộc"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginLeft="3dp"
            android:fontFamily="serif"

            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        >

        <ImageView
            android:id="@+id/ivDeleteLoaiSp"
            android:layout_width="30dp"

            android:layout_height="30dp"

            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_delete_test"
            android:layout_marginRight="10dp"
            />


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"

            android:id="@+id/ivEditLoaiSp"

            android:layout_toLeftOf="@id/ivDeleteLoaiSp"
            android:src="@drawable/icon_edit_test"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>



</androidx.cardview.widget.CardView>