<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00BCD4"
    tools:context=".fragment.DanhSach_Sp">
    <LinearLayout
        android:id="@+id/layoutOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    </LinearLayout>

    <RelativeLayout
        android:layout_below="@+id/layoutOne"
        android:id="@+id/layoutMid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/style_layout_middle"
        android:layout_marginTop="25dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rvDanhSachSanPham"
                />
        </LinearLayout>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/Float_add_Sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#00BCD4"
            android:src="@drawable/img_add"
            app:tint="#fff"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/layoutSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/style_ed_loaisp"
        android:orientation="horizontal">
        <EditText
            android:background="@drawable/style_ed_loaisp"
            android:id="@+id/ed_sanpham_timkiem"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="10dp"
            android:hint="Tìm kiếm ..."
            android:fontFamily="serif"
            />
        <ImageButton
            android:id="@+id/btn_sanpham_timkiem"
            android:layout_weight="1"
            android:layout_width="60dp"
            android:background="@drawable/style_ed_loaisp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_tim_kiem"/>
    </LinearLayout>
</RelativeLayout>